<!-- Header Posts
================================================== -->
<div class="container-fluid">
	<div class="posts post-grid--fitRows post-grid--featured">

		{{#each football.posts.hero-posts}}
		<div class="post-grid__item {{col}}">
			<div class="posts__item posts__item--desc-{{#if featured}}center{{else}}left{{/if}} posts__item--{{category.class}}">
				<a href="#" class="posts__link-wrapper">
					<figure class="posts__thumb effect-duotone effect-duotone--{{gradient}}">
						<img src="{{../root}}assets/images/{{thumb}}" alt="">
					</figure>
					<div class="posts__inner">
						<div class="posts__cat">
							<span class="label posts__cat-label">{{category.name}}</span>
						</div>
						<h3 class="posts__title">{{{title}}}</h3>
						<div class="post-author">
							{{#if featured}}
							<figure class="post-author__avatar">
								<img src="{{../root}}assets/images/{{author.avatar}}" alt="Post Author Avatar">
							</figure>
							{{/if}}
							<div class="post-author__info">
								<time datetime="2017-08-28" class="posts__date">{{date}}</time>
							</div>
						</div>
					</div>
				</a>
			</div>
		</div>
		{{/each}}

	</div>
</div>

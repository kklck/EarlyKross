<!-- Widget: Standings -->
<aside class="widget card widget--sidebar widget-standings">
	<div class="widget__title card__header card__header--has-btn">
		<h4>West League 2020</h4>
		<a href="_football_team-standings.html" class="btn btn-default btn-xs card-header__button">See All Stats</a>
	</div>
	<div class="widget__content card__content">
		<div class="table-responsive">
			<table class="table table-hover table-standings">
				<thead>
					<tr>
						<th>Team Positions</th>
						<th>W</th>
						<th>L</th>
						<th>T</th>
						<th>PF</th>
						<th>PA</th>
					</tr>
				</thead>
				<tbody>

					{{#each football.sp.league-table}}
					<tr>
						<td>
							<div class="team-meta">
								<figure class="team-meta__logo">
									<img src="{{../root}}assets/images/{{logo}}" alt="">
								</figure>
								<div class="team-meta__info">
									<h6 class="team-meta__name">{{name}}</h6>
									<span class="team-meta__place">{{place}}</span>
								</div>
							</div>
						</td>
						<td>{{stats.w}}</td>
						<td>{{stats.l}}</td>
						<td>{{stats.t}}</td>
						<td>{{stats.pf}}</td>
						<td>{{stats.pa}}</td>
					</tr>
					{{/each}}

				</tbody>
			</table>
		</div>
	</div>
</aside>
<!-- Widget: Standings / End -->

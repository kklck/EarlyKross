---
layout: football
page-title: News V4
page-heading: "News <span class=\"highlight\">V4</span>"

breadcrumbs: [
	{
		label: "News V4"
	}
]
---

{{> _football_blog-filter}}

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row">
			<!-- Content -->
			<div class="content col-lg-8">

				<!-- Posts Grid -->
				<div class="posts posts--tile post-grid row">

					{{#each football.posts.news-4}}
					<div class="post-grid__item col-sm-6">
						<div class="posts__item posts__item--tile posts__item--{{category.class}} card">
							<figure class="posts__thumb effect-duotone effect-duotone--base">
								<img src="{{../root}}assets/images/{{thumb}}" alt="">
							</figure>
							<a href="#" class="posts__cta"></a>
							<div class="posts__inner">
								<div class="posts__cat">
									<span class="label posts__cat-label">{{category.name}}</span>
								</div>
								<h6 class="posts__title"><a href="#">{{title}}</a></h6>
								<time datetime="2017-08-23" class="posts__date">{{date}}</time>
								<footer class="posts__footer card__footer">
									<div class="post-author">
										<figure class="post-author__avatar">
											<img src="{{../root}}assets/images/football/samples/{{author.avatar}}" alt="Post Author Avatar">
										</figure>
										<div class="post-author__info">
											<h4 class="post-author__name">{{author.name}}</h4>
										</div>
									</div>
									<ul class="post__meta meta">
										<li class="meta__item meta__item--views">{{meta.views}}</li>
										<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like meta-like--active icon-heart"></i> {{meta.likes}}</a></li>
										<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
									</ul>
								</footer>
							</div>
						</div>
					</div>
					{{/each}}

				</div>
				<!-- Post Grid / End -->

				{{> _football_blog-pagination custom-class="justify-content-center" }}

			</div>
			<!-- Content / End -->

			<!-- Sidebar -->
			<div id="sidebar" class="sidebar col-lg-4">

				{{> widget-social-grid}}

				{{> _football_widget-popular-posts-numbered}}

				{{> _football_widget-tagcloud}}

				{{> _football_widget-comments}}

			</div>
			<!-- Sidebar / End -->
		</div>

	</div>
</div>

<!-- Content / End -->

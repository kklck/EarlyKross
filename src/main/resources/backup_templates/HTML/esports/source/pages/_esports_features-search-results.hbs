---
layout: esports
page-title: Search Results
page-heading: "Search <span class=\"highlight\">Results</span>"
megamenu: v3

breadcrumbs: [
	{
		label: "News",
		link: "#"
	},
	{
		label: "Search Results"
	}
]
---

{{> _esports_blog-filter }}

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row">

			<!-- Content -->
			<div class="content col-lg-8">

				<div class="alert alert-success alert--rounded">
					<strong>5 Articles were found for your "<span class="text-success">Alchemists Roster</span>" search</strong>
				</div>

				<!-- Search Results -->
				<ul class="posts posts--simple-list posts--simple-list--search">

					{{#each (limit esports.posts.news-1 5)}}
					<li class="posts__item card {{#each category}}posts__item--{{class}} {{/each}}">
						<div class="posts__inner card__content">
							<div class="posts__cat">
								{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
							</div>
							<h6 class="posts__title"><a href="#">{{title}}</a></h6>
							<time datetime="2017-08-23" class="posts__date">{{date}}</time>
							<div class="posts__excerpt">
								{{excerpt}}
							</div>
						</div>
					</li>
					{{/each}}

				</ul>
				<!-- Search Results / End -->

				{{> _esports_blog-pagination custom-class="justify-content-center" }}

			</div>
			<!-- Content / End -->

			<!-- Sidebar -->
			<div id="sidebar" class="sidebar col-lg-4">

				{{> _esports_widget-tabbed }}

			</div>
			<!-- Sidebar / End -->
		</div>

	</div>
</div>

<!-- Content / End -->

---
layout: esports
page-title: Home 1
hero-unit-slider: true
instagram-section: true
---

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row">
			<!-- Content -->
			<div class="content col-lg-8">

				<!-- Posts Area #1 -->
				<!-- Posts Grid -->
				<div class="posts posts--cards post-grid post-grid--2cols row">

					{{#each (limit esports.posts.news-2 5)}}
					<div class="post-grid__item col-sm-6">
						<div class="posts__item posts__item--card {{#each category}}posts__item--{{class}} {{/each}} card">
							<figure class="posts__thumb">
								<div class="posts__cat">
									{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
								</div>
								<a href="_esports_blog-post-1.html"><img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt=""></a>
							</figure>
							<div class="posts__inner card__content">
								<a href="_esports_blog-post-1.html" class="posts__cta"></a>
								<time datetime="2018-08-23" class="posts__date">{{date}}</time>
								<h6 class="posts__title posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
								<div class="posts__excerpt">
									{{excerpt}}
								</div>
							</div>
							<footer class="posts__footer card__footer">
								<div class="post-author">
									<figure class="post-author__avatar">
										<img src="{{../root}}assets/images/samples/{{author.avatar}}" alt="Post Author Avatar">
									</figure>
									<div class="post-author__info">
										<h4 class="post-author__name">{{author.name}}</h4>
									</div>
								</div>
								<ul class="post__meta meta">
									<li class="meta__item meta__item--views">{{meta.views}}</li>
									<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
									<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
								</ul>
							</footer>
						</div>
					</div>
					{{/each}}

					<div class="post-grid__item col-sm-6">
						<div class="posts posts--tile posts--tile-alt posts--tile-meta-position posts--tile-thumb-bordered">

							{{#each esports.posts.news-7}}
							<div class="post-grid__item">
								<div class="posts__item posts__item--tile {{#each category}}posts__item--{{class}} {{/each}} card">
									{{#if thumb}}
									<figure class="posts__thumb">
										<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="">
										<div class="posts__inner">
											<div class="posts__cat">
												{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
											</div>
											<h6 class="posts__title {{#if @first}}posts__title--lg{{/if}} posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
											<time datetime="2018-08-23" class="posts__date">{{date}}</time>
											<ul class="post__meta meta">
												<li class="meta__item meta__item--views">{{meta.views}}</li>
												<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
												<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
											</ul>
										</div>
									</figure>
									<a href="_esports_blog-post-1.html" class="posts__cta"></a>
									{{/if}}
								</div>
							</div>
							{{/each}}

						</div>
					</div>

				</div>
				<!-- Post Grid / End -->
				<!-- Posts Area #1 / End -->

				<!-- Main News Banner -->
				<div class="main-news-banner main-news-banner--bg main-news-banner--img-left">
					<figure class="main-news-banner__img">
						<img src="{{../root}}assets/images/esports/samples/character-news-banner__img.png" alt="">
					</figure>
					<div class="main-news-banner__inner">
						<div class="posts posts--simple-list posts--simple-list--xlg">
							<div class="posts__item posts__item--category-1">
								<div class="posts__inner">
									<div class="posts__cat">
										<span class="label posts__cat-label posts__cat-label--category-2">L.O. Heroes</span>
									</div>
									<h6 class="posts__title"><a href="_esports_blog-post-2.html">League of Heroes "Jaxxy" character is gonna get a really big update</a></h6>
									<time datetime="2017-08-23" class="posts__date">August 27th, 2018</time>
									<div class="posts__excerpt">
										Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua ut enim ad minim.
									</div>
									<div class="posts__more">
										<a href="_esports_blog-post-2.html" class="btn btn-primary-inverse btn-icon-right">Read Full Story <i class="fas fa-angle-right"></i></a>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
				<!-- Main News Banner / End -->

				<!-- Posts Area #2 -->
				<!-- Posts Grid -->
				<div class="posts posts--cards post-grid post-grid--2cols row">

					{{#each esports.posts.news-8}}
					<div class="post-grid__item col-sm-6">
						<div class="posts__item posts__item--card {{#each category}}posts__item--{{class}} {{/each}} card">
							<figure class="posts__thumb">
								<div class="posts__cat">
									{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
								</div>
								<a href="_esports_blog-post-1.html"><img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt=""></a>
							</figure>
							<div class="posts__inner card__content">
								<a href="_esports_blog-post-1.html" class="posts__cta"></a>
								<time datetime="2018-08-23" class="posts__date">{{date}}</time>
								<h6 class="posts__title posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
							</div>
							<footer class="posts__footer card__footer">
								<div class="post-author">
									<figure class="post-author__avatar">
										<img src="{{../root}}assets/images/samples/{{author.avatar}}" alt="Post Author Avatar">
									</figure>
									<div class="post-author__info">
										<h4 class="post-author__name">{{author.name}}</h4>
									</div>
								</div>
								<ul class="post__meta meta">
									<li class="meta__item meta__item--views">{{meta.views}}</li>
									<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
									<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
								</ul>
							</footer>
						</div>
					</div>
					{{/each}}

				</div>
				<!-- Post Grid / End -->
				<!-- Posts Area #2 / End -->
			</div>
			<!-- Content / End -->

			<!-- Sidebar -->
			<div id="sidebar" class="sidebar col-lg-4">

				{{> _esports_widget-standings title="L.O. Heroes Standings" }}

				{{> _esports_widget-twitch-streams-sm }}

				{{> _esports_widget-event-result-2 }}

				{{> _esports_widget-tabbed }}

				{{> _esports_widget-event-calendar-2 }}

			</div>
			<!-- Sidebar / End -->
		</div>

	</div>
</div>

<!-- Content / End -->

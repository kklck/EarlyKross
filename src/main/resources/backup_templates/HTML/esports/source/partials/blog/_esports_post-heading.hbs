<!-- Page Heading
================================================== -->
<div class="page-heading page-heading--overlay page-heading--post-bg">
	<div class="container">
		<div class="row">
			<div class="col-md-6 offset-md-3">
				<div class="post__meta-block-wrapper">
					<!-- Post Meta - Top -->
					<div class="post__meta-block post__meta-block--top posts__item--category-2">

						<!-- Post Category -->
						<div class="post__category">
							<span class="label posts__cat-label posts__cat-label--category-3">Striker GO</span>
						</div>
						<!-- Post Category / End -->

						<!-- Post Title -->
						<h1 class="page-heading__title">New Steath mission for the strikers mode</h1>
						<!-- Post Title / End -->

						<!-- Post Meta Info -->
						<ul class="post__meta meta">
							<li class="meta__item meta__item--author">
								<!-- Post Author -->
								<div class="post-author">
									<figure class="post-author__avatar">
										<img src="{{../root}}assets/images/esports/samples/avatar-13-sm.jpg" alt="Post Author Avatar">
									</figure>
									<div class="post-author__info">
										<h4 class="post-author__name">Eric Rodgers</h4>
									</div>
								</div>
								<!-- Post Author / End -->
							</li>
							<li class="meta__item meta__item--date">
								<time datetime="2017-08-23">August 23rd, 2017</time>
							</li>
						</ul>
						<!-- Post Meta Info / End -->

						<!-- Post Sharing -->
						{{> _esports_post-sharing-heading }}
						<!-- Post Sharing / End -->

					</div>
					<!-- Post Meta - Top / End -->
				</div>
			</div>
		</div>
	</div>
</div>

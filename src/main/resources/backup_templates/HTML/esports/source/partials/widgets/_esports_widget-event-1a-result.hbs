<!-- Widget: Event Result -->
<aside class="widget card widget--sidebar widget-game-result">
	<div class="widget__title card__header">
		<h4>Game Overview</h4>
	</div>
	<div class="widget__content card__content">

		<!-- Game Score -->
		<div class="widget-game-result__section">

			<div class="widget-game-result__stack">
				<div class="widget-game-result__stack-item widget-game-result__stack-item--teams">
					<!-- Team 1 -->
					<div class="widget-game-result__stack-team widget-game-result__stack-team--first">
						<figure class="widget-game-result__stack-team-logo">
							<img src="{{esports.sp.event1.a.widget-event-overview.general.team1.logo}}" alt="{{esports.sp.event1.a.widget-event-overview.general.team1.logo}}">
						</figure>
						<div class="widget-game-result__stack-team-meta">
							<h6 class="widget-game-result__stack-team-name">{{esports.sp.event1.a.widget-event-overview.general.team1.name}}</h6>
							<span class="widget-game-result__stack-team-place">{{esports.sp.event1.a.widget-event-overview.general.team1.place}}</span>
						</div>
					</div>
					<!-- Team 1 / End -->

					<div class="widget-game-result__stack-result">
						<span class="widget-game-result__stack-result-team win">W</span>
						<span class="widget-game-result__stack-result-team">L</span>
					</div>

					<!-- Team 2 -->
					<div class="widget-game-result__stack-team widget-game-result__stack-team--second">
						<figure class="widget-game-result__stack-team-logo">
							<img src="{{esports.sp.event1.a.widget-event-overview.general.team2.logo}}" alt="{{esports.sp.event1.a.widget-event-overview.general.team2.logo}}">
						</figure>
						<div class="widget-game-result__stack-team-meta">
							<h6 class="widget-game-result__stack-team-name">{{esports.sp.event1.a.widget-event-overview.general.team2.name}}</h6>
							<span class="widget-game-result__stack-team-place">{{esports.sp.event1.a.widget-event-overview.general.team2.place}}</span>
						</div>
					</div>
					<!-- Team 2 / End -->
				</div>

				{{#each esports.sp.event1.a.widget-event-overview.general.info}}
				<div class="widget-game-result__stack-item">
					<div class="widget-game-result__stack-label">{{label}}:</div>
					<div class="widget-game-result__stack-value">{{value}}</div>
				</div>
				{{/each}}
			</div>

		</div>
		<!-- Game Score / End -->

		<!-- Game Statistics -->
		<div class="widget-game-result__section">
			<header class="widget-game-result__subheader card__subheader card__subheader--sm card__subheader--nomargins">
				<h5 class="widget-game-result__subtitle">Game Statistics</h5>
			</header>
			<div class="widget-game-result__section-inner">

				<!-- Progress Stats Table -->
				<table class="progress-table progress-table--sm-space">
					<tbody>

						{{#each esports.sp.event1.a.widget-event-overview.stats}}
						<tr>
							<td class="progress-table__progress-label {{#if team1.highlight}}progress-table__progress-label--highlight{{/if}}">{{team1.value}}</td>
							<td class="progress-table__progress-bar progress-table__progress-bar--first">
								<div class="progress progress--lines">
									<div class="progress__bar" style="width: {{team1.pct}}%;" role="progressbar" aria-valuenow="{{team1.value}}" aria-valuemin="0" aria-valuemax="100"></div>
								</div>
							</td>
							<td class="progress-table__title">{{label}}</td>
							<td class="progress-table__progress-bar progress-table__progress-bar--second">
								<div class="progress progress--lines">
									<div class="progress__bar progress__bar--info" style="width: {{team2.pct}}%;" role="progressbar" aria-valuenow="{{team2.value}}" aria-valuemin="0" aria-valuemax="100"></div>
								</div>
							</td>
							<td class="progress-table__progress-label {{#if team2.highlight}}progress-table__progress-label--highlight{{/if}}">{{team2.value}}</td>
						</tr>
						{{/each}}

					</tbody>
				</table>
				<!-- Progress Stats Table / End -->

			</div>
		</div>
		<!-- Game Statistics / End -->

		<!-- Additional Stats -->
		<div class="widget-game-result__section">
			<header class="widget-game-result__subheader card__subheader card__subheader--sm card__subheader--nomargins">
				<h5 class="widget-game-result__subtitle">Additional Stats</h5>
			</header>
			<div class="widget-game-result__section-inner">

				<!-- Circular Bars -->
				<ul class="widget-game-result__stats-circular-bars widget-game-result__stats-circular-bars--cols-4 list-unstyled">

					{{#each esports.sp.event1.a.widget-event-overview.additional-stats}}
					<li class="widget-game-result__stats-circular-item">
						<div class="widget-game-result__stats-circular-bar">
							<div class="circular circular--size-40">
								<div
									class="circular__bar"
									data-percent="{{pct}}"
									data-track-color="{{color1}}"
									data-bar-color="{{color2}}"
									data-toggle="tooltip"
									data-placement="top"
									data-html="true"
									title="<div class='alc-circular-tooltip-stats'><span class='alc-circular-tooltip-stat__circle' style='background-color: {{color1}};'></span><span class='alc-circular-tooltip-stat__value'>{{value1}}</span> <span class='alc-circular-tooltip-stat__label'>{{label}} {{sublabel}}</span></div><div class='alc-circular-tooltip-stats'><span class='alc-circular-tooltip-stat__circle' style='background-color: {{color2}};'></span><span class='alc-circular-tooltip-stat__value'>{{value2}}</span> <span class='alc-circular-tooltip-stat__label'>{{label}} {{sublabel}}</span></div>"
									data-template="<div class='tooltip tooltip--card tooltip--card-sm' role='tooltip'><div class='tooltip-inner'></div></div>">
									<svg role="img" class="df-icon df-icon--{{icon}}">
										<use xlink:href="{{../root}}assets/images/esports/icons-esports.svg#{{icon}}"/>
									</svg>
								</div>
							</div>
						</div>
						<div class="widget-game-result__stats-meta">
							<span class="widget-game-result__stats-value">{{label}}</span>
							<span class="widget-game-result__stats-label">{{sublabel}}</span>
						</div>
					</li>
					{{/each}}

				</ul>
				<!-- Circular Bars / End -->

			</div>
		</div>
		<!-- Additional Stats / End -->

		<!-- Event Leaders -->
		<div class="widget-game-result__section">
			<header class="widget-game-result__subheader card__subheader card__subheader--sm card__subheader--nomargins">
				<h5 class="widget-game-result__subtitle">Top 3 Damage Leaders</h5>
			</header>
			<div class="widget-game-result__section-inner-alt">

				<!-- Event Leaders List -->
				<ul class="widget-game-result__players list-unstyled">

					{{#each esports.sp.event1.a.widget-event-overview.leaders}}
					<li class="widget-game-result__player">
						<div class="widget-game-result__player-info">
							<figure class="widget-game-result__player-img {{#ifequal team 2}}widget-game-result__player-img--color-alt{{/ifequal}}">
								<img src="{{player.img}}" alt="{{player.name}}">
							</figure>
							<figure class="widget-game-result__player-character-img {{#ifequal team 2}}widget-game-result__player-character-img--color-alt{{/ifequal}}">
								<img src="{{character.img}}" alt="{{character.name}}">
							</figure>
							<div class="widget-game-result__player-meta">
								<h6 class="widget-game-result__player-nickname">{{player.name}}</h6>
								<div class="widget-game-result__player-character">{{character.name}}</div>
							</div>
						</div>
						<div class="widget-game-result__player-stats">
							<!-- Progress Bar -->
							<div class="progress-stats progress-stats--top-labels">
								<div class="progress__label">{{stats.value}}</div>
								<div class="progress">
									<div class="progress__bar progress__bar--blue-pink" style="width: {{stats.pct}}%;" role="progressbar" aria-valuenow="{{stats.pct}}" aria-valuemin="0" aria-valuemax="100"></div>
								</div>
							</div>
							<!-- Progress Bar / End -->
						</div>
					</li>
					{{/each}}

				</ul>
				<!-- Event Leaders List / End -->

			</div>
		</div>
		<!-- Event Leaders / End -->

	</div>
</aside>
<!-- Widget: Event Result / End -->

<!-- Header Posts
================================================== -->
<div class="container">
	<div class="posts posts--tile posts--tile-alt post-grid grid-layout grid-layout--1-2-1 posts--tile-alt-nopaddings posts--tile-hero-post-grid posts--tile-meta-position">

		{{#each esports.posts.hero-posts}}
		<div class="post-grid__item posts__item posts__item--tile {{#each category}}posts__item--{{class}} {{/each}}">
			{{#if thumb}}
			<figure class="posts__thumb h-100">
				<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="" class="h-100">
				<a href="_esports_blog-post-1.html" class="posts__item-link-overlay"></a>
				<div class="posts__inner posts__inner--noactive">
					<div class="posts__cat">
						{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
					</div>
					<h6 class="posts__title {{#if @first}}posts__title--lg{{/if}}"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
					<time datetime="2018-08-23" class="posts__date">{{date}}</time>
					<ul class="post__meta meta">
						<li class="meta__item meta__item--views">{{meta.views}}</li>
						<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
						<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
					</ul>
					<div class="posts__excerpt">
						{{excerpt-sm}}
					</div>
				</div>
			</figure>
			<a href="_esports_blog-post-1.html" class="posts__cta"></a>
			{{/if}}
		</div>
		{{/each}}

	</div>
</div>

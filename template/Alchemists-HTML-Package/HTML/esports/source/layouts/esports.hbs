<!DOCTYPE html>
<html lang="zxx">
<head>

	<!-- Basic Page Needs
	================================================== -->
	<title>{{esports.site-title}} - {{page-title}}</title>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="description" content="{{global.description}}">
	<meta name="author" content="{{global.author}}">
	<meta name="keywords" content="{{global.keywords}}">

	<!-- Favicons
	================================================== -->
	<link rel="shortcut icon" href="{{root}}assets/images/{{esports.template}}/favicons/favicon.ico">
	<link rel="apple-touch-icon" sizes="120x120" href="{{root}}assets/images/{{esports.template}}/favicons/favicon-120.png">
	<link rel="apple-touch-icon" sizes="152x152" href="{{root}}assets/images/{{esports.template}}/favicons/favicon-152.png">

	<!-- Mobile Specific Metas
	================================================== -->
	<meta name="viewport" content="width=device-width,initial-scale=1.0,maximum-scale=1.0,user-scalable=0">

	<!-- Google Web Fonts
	================================================== -->
	<link href="https://fonts.googleapis.com/css?family={{esports.fonts}}" rel="stylesheet">

	<!-- CSS
	================================================== -->
	<!-- Vendor CSS -->
	<link href="{{root}}assets/vendor/bootstrap/css/bootstrap.css" rel="stylesheet">
	<link href="{{root}}assets/fonts/font-awesome/css/all.min.css" rel="stylesheet">
	<link href="{{root}}assets/fonts/simple-line-icons/css/simple-line-icons.css" rel="stylesheet">
	<link href="{{root}}assets/vendor/magnific-popup/dist/magnific-popup.css" rel="stylesheet">
	<link href="{{root}}assets/vendor/slick/slick.css" rel="stylesheet">

	{{#if hero-unit-slider}}
	<!-- REVOLUTION STYLE SHEETS -->
	<link rel="stylesheet" type="text/css" href="{{../root}}assets/vendor/revolution/css/settings.css">

	<!-- REVOLUTION LAYERS STYLES -->
	<link rel="stylesheet" type="text/css" href="{{../root}}assets/vendor/revolution/css/layers.css">

	<!-- REVOLUTION NAVIGATION STYLES -->
	<link rel="stylesheet" type="text/css" href="{{../root}}assets/vendor/revolution/css/navigation.css">

	<!-- REVEAL ADD-ON FILES -->
	<link rel='stylesheet' href='{{../root}}assets/vendor/revolution-addons/reveal/css/revolution.addon.revealer.css?ver=1.0.0' type='text/css' media='all' />
	<link rel='stylesheet' href='{{../root}}assets/vendor/revolution-addons/reveal/css/revolution.addon.revealer.preloaders.css?ver=1.0.0' type='text/css' media='all' />

	<!-- TYPEWRITER ADD-ON FILES -->
	<link rel='stylesheet' href='{{../root}}assets/vendor/revolution-addons/typewriter/css/typewriter.css' type='text/css' media='all' />
	{{/if}}

	<!-- Template CSS-->
	<link href="{{root}}assets/css/style-{{esports.template}}.css" rel="stylesheet">

	<!-- Custom CSS-->
	<link href="{{root}}assets/css/custom.css" rel="stylesheet">

</head>
<body data-template="template-{{esports.template}}">

	<div class="site-wrapper clearfix">
		<div class="site-overlay"></div>

		{{#if header-alt }}
		{{> _esports_header-2 }}
		{{else}}
		{{> _esports_header }}
		{{/if}}

		{{#if hero-unit-slider }}
		{{> _esports_hero-unit-slider }}
		{{else if hero-posts}}
		{{> _esports_hero-posts }}
		{{else if post-heading}}
		{{> _esports_post-heading }}
		{{else if post-heading-simple }}
		{{> _esports_post-heading-simple }}
		{{else}}
		{{> _esports_page-heading }}
		{{/if}}

		{{> body}}

		{{> _esports_footer }}

	</div>

	{{> _esports_footer-scripts}}

</body>
</html>

---
layout: esports
page-title: Next Matches
page-heading: "Next <span class=\"highlight\">Matches</span>"
megamenu: v3

breadcrumbs: [
	{
		label: "Teams",
		link: "#"
	},
	{
		label: "L.O. Heroes",
		link: "#"
	},
	{
		label: "Next Matches"
	}
]
---

{{> _esports_team-filter }}

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<!-- Schedule & Tickets -->
		<div class="card card--has-table">
			<div class="card__header">
				<h4>Next Matches</h4>
			</div>
			<div class="card__content">
				<div class="table-responsive">
					<table class="table table-hover team-schedule team-schedule--full">
						<thead>
							<tr>
								<th class="team-schedule__date">Date</th>
								<th class="team-schedule__versus">Versus</th>
								<th class="team-schedule__compet">Competition</th>
								<th class="team-schedule__instance">Instance</th>
								<th class="team-schedule__time">Time</th>
								<th class="team-schedule__venue">Venue</th>
								<th class="team-schedule__prize">Prize</th>
								<th class="team-schedule__tickets">Tickets</th>
							</tr>
						</thead>
						<tbody>
							{{#each esports.sp.team.schedule}}
							<tr>
								<td class="team-schedule__date">{{date}}</td>
								<td class="team-schedule__versus">
									<div class="team-meta">
										<figure class="team-meta__logo">
											<img src="{{../root}}assets/images/samples/logos/{{team.logo}}" alt="">
										</figure>
										<div class="team-meta__info">
											<h6 class="team-meta__name">{{team.name}}</h6>
											<span class="team-meta__place">{{team.place}}</span>
										</div>
									</div>
								</td>
								<td class="team-schedule__compet">{{league}}</td>
								<td class="team-schedule__instance highlight">{{instance}}</td>
								<td class="team-schedule__time highlight">{{time}}</td>
								<td class="team-schedule__venue highlight">{{venue}}</td>
								<td class="team-schedule__prize">{{prize}}</td>
								<td class="team-schedule__tickets">
									<a href="#" class="btn btn-xs btn-default-alt btn-block {{#unless availability}}disabled{{/unless}}">
										{{#if availability}}Buy Match Tickets{{else}}Sold Out{{/if}}
									</a>
								</td>
							</tr>
							{{/each}}
						</tbody>
					</table>
				</div>
			</div>
		</div>
		<!-- Schedule & Tickets / End -->

		{{> _esports_team-pagination custom-class="justify-content-center" }}

	</div>
</div>

<!-- Content / End -->

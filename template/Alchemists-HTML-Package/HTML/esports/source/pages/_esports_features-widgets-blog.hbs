			<div class="col-md-4">

				{{> _esports_widget-tabbed }}

			</div>
			<div class="col-md-4">

				{{> _esports_widget-twitter }}

				{{> widget-calendar}}

			</div>
			<div class="col-md-4">

				{{> _esports_widget-banner}}

			</div>
		</div>

		<div class="spacer"></div>

		<div class="row">

			<div class="col-lg-4">

				{{> _esports_widget-video title="YouTube" btn="true" id="iH0wacpNuDQ" thumbnail="assets/images/esports/samples/event-video2-cover-md.jpg"}}

				{{> _esports_widget-video title="Twitch" btn="true" id="thijs" provider="twitch" thumbnail="assets/images/esports/samples/event-video1-cover-lg.jpg"}}

			</div>

			<div class="col-lg-4">

				{{> _esports_widget-poll }}

			</div>

			<div class="col-lg-4">

				{{> _esports_widget-newsletter }}

			</div>

		</div>


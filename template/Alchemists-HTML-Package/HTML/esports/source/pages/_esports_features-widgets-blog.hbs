<div class="site-content">
	<div class="container">

		<div class="row">
			<div class="col-md-4">

				{{> _esports_widget-categories }}

			</div>
			<div class="col-md-4">

				{{> _esports_widget-comments }}

			</div>
			<div class="col-md-4">

				{{> _esports_widget-tagcloud }}

			</div>
		</div>

		<div class="spacer"></div>

		<div class="row">
			<div class="col-md-4">

				{{> _esports_widget-popular-thumbs }}

			</div>
			<div class="col-md-4">

				{{> _esports_widget-popular }}

			</div>
			<div class="col-md-4">

				{{> _esports_widget-videos }}

			</div>
		</div>

		<div class="spacer"></div>

		<div class="row">
			<div class="col-md-4">

				{{> widget-social}}

				{{> widget-social-alt}}

			</div>

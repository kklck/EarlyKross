---
layout: esports
page-title: News V4
page-heading: "News <span class=\"highlight\">V4</span>"
megamenu: v3

breadcrumbs: [
	{
		label: "News",
		link: "#"
	},
	{
		label: "News V4"
	}
]
---

{{> _esports_blog-filter }}

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row">

			<!-- Content -->
			<div class="content col-lg-12">

				<!-- Posts Grid -->
				<div class="posts posts--tile posts--tile-alt post-grid post-grid--masonry row">

					{{#each esports.posts.news-4}}

						{{#ifequal format 'event'}}

						<div class="post-grid__item col-md-6 col-lg-4">
							<div class="posts__item posts__item--tile posts__item--tile-event {{#each category}}posts__item--{{class}} {{/each}} card">
								<figure class="posts__thumb effect-duotone effect-duotone--base">
									<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="">
									<div class="posts__inner">
										<div class="posts__cat">
											{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
										</div>
										<h6 class="posts__title posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
										<div class="posts__excerpt">
											{{excerpt}}
										</div>
										<div class="posts__countdown countdown-counter" data-date="{{date}}"></div>
										<footer class="posts__logo">
											<a href="#"><img src="{{../root}}assets/images/social-logo-twitch-sm.png" alt=""></a>
										</footer>
									</div>
								</figure>
							</div>
						</div>

						{{else}}

						<div class="post-grid__item col-md-6 col-lg-4">
							<div class="posts__item posts__item--tile {{#each category}}posts__item--{{class}} {{/each}} card">
								{{#if thumb}}
								<figure class="posts__thumb">
									<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="">
									<div class="posts__inner">
										<div class="posts__cat">
											{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
										</div>
										<h6 class="posts__title posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
										<time datetime="2018-08-23" class="posts__date">{{date}}</time>
									</div>
								</figure>
								<a href="_esports_blog-post-1.html" class="posts__cta"></a>
								{{/if}}
								<footer class="posts__footer card__footer">
									<div class="post-author">
										<figure class="post-author__avatar">
											<img src="{{../root}}assets/images/esports/samples/{{author.avatar}}" alt="Post Author Avatar">
										</figure>
										<div class="post-author__info">
											<h4 class="post-author__name">{{author.name}}</h4>
										</div>
									</div>
									<ul class="post__meta meta">
										<li class="meta__item meta__item--views">{{meta.views}}</li>
										<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
										<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
									</ul>
								</footer>
							</div>
						</div>

						{{/ifequal}}


						{{#ifequal @index 4}}
						<div class="post-grid__item col-md-6 col-lg-4">
							<a href="#" class="btn-social-counter btn-social-counter--card btn-social-counter--fb">
								<div class="btn-social-counter__logo"><img src="assets/images/social-logo-facebook.png" alt="Facebook"></div>
								<footer class="btn-social-counter__footer">
									<h6 class="btn-social-counter__title">Like Our Facebook Page</h6>
									<span class="btn-social-counter__count">83600 Likes</span>
									<span class="btn-social-counter__add-icon"></span>
								</footer>
							</a>
						</div>
						{{/ifequal}}

						{{#ifequal @index 5}}
						<div class="post-grid__item col-md-6 col-lg-4">
							<a href="#" class="btn-social-counter btn-social-counter--card btn-social-counter--twitter">
								<div class="btn-social-counter__logo"><img src="assets/images/social-logo-twitter.png" alt="Twitter"></div>
								<footer class="btn-social-counter__footer">
									<h6 class="btn-social-counter__title">Follow Us on Twitter</h6>
									<span class="btn-social-counter__count">580 Followers</span>
									<span class="btn-social-counter__add-icon"></span>
								</footer>
							</a>
						</div>
						{{/ifequal}}

						{{#ifequal @index 7}}
						<div class="post-grid__item col-md-6 col-lg-4">
							<a href="#" class="btn-social-counter btn-social-counter--card btn-social-counter--youtube">
								<div class="btn-social-counter__logo"><img src="assets/images/social-logo-youtube.png" alt="YouTube"></div>
								<footer class="btn-social-counter__footer">
									<h6 class="btn-social-counter__title">Subscribe to our YouTube channel</h6>
									<span class="btn-social-counter__count">200637 Subscribers</span>
									<span class="btn-social-counter__add-icon"></span>
								</footer>
							</a>
						</div>
						{{/ifequal}}

						{{#ifequal @index 9}}
						<div class="post-grid__item col-md-6 col-lg-4">
							<a href="#" class="btn-social-counter btn-social-counter--card btn-social-counter--twitch">
								<div class="btn-social-counter__logo"><img src="assets/images/social-logo-twitch.png" alt="Twitch"></div>
								<footer class="btn-social-counter__footer">
									<h6 class="btn-social-counter__title">Subscribe to our Twitch channel</h6>
									<span class="btn-social-counter__count">830617 Likes</span>
									<span class="btn-social-counter__add-icon"></span>
								</footer>
							</a>
						</div>
						{{/ifequal}}

					{{/each}}

				</div>
				<!-- Post Grid / End -->

				{{> _esports_blog-load-more class="text-center" }}

			</div>
			<!-- Content / End -->

		</div>

	</div>
</div>

<!-- Content / End -->

---
layout: esports
page-title: Home 2
hero-posts: true
marquee_script: true
---

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		{{> _esports_marquee }}

		<div class="row">
			<!-- Content -->
			<div class="content col-lg-8">

				<!-- Posts Area #1 -->
				<!-- Posts Grid -->
				<div class="posts posts--tile posts--tile-alt post-grid row">

					{{#each (limit esports.posts.news-1 7)}}
					<div class="post-grid__item col-sm-6">
						<div class="posts__item posts__item--tile {{#each category}}posts__item--{{class}} {{/each}} card">
							<figure class="posts__thumb">
								<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="">
								<a href="_esports_blog-post-1.html" class="posts__item-link-overlay"></a>
								<div class="posts__inner posts__inner--noactive">
									<div class="posts__cat">
										{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
									</div>
									<h6 class="posts__title">{{title}}</h6>
									<time datetime="2018-08-23" class="posts__date">{{date}}</time>
									<div class="posts__excerpt">
										{{excerpt-sm}}
									</div>
								</div>
							</figure>
							<a href="_esports_blog-post-1.html" class="posts__cta"></a>
							<footer class="posts__footer card__footer">
								<div class="post-author">
									<figure class="post-author__avatar">
										<img src="{{../root}}assets/images/esports/samples/{{author.avatar}}" alt="Post Author Avatar">
									</figure>
									<div class="post-author__info">
										<h4 class="post-author__name">{{author.name}}</h4>
									</div>
								</div>
								<ul class="post__meta meta">
									<li class="meta__item meta__item--views">{{meta.views}}</li>
									<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
									<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
								</ul>
							</footer>
						</div>
					</div>
					{{/each}}

					<div class="post-grid__item col-sm-6">
						{{#each (limit esports.posts.news-5 2)}}
						<div class="post-grid__item">
							<div class="posts__item posts__item--tile posts__item--tile-sm {{#each category}}posts__item--{{class}} {{/each}} card">
								<figure class="posts__thumb">
									<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="">
									<div class="posts__inner">
										<div class="posts__cat">
											{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
										</div>
										<h6 class="posts__title posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
										<time datetime="2018-08-23" class="posts__date">{{date}}</time>
									</div>
								</figure>
								<footer class="posts__footer card__footer">
									<div class="post-author">
										<figure class="post-author__avatar">
											<img src="{{../root}}assets/images/esports/samples/{{author.avatar}}" alt="Post Author Avatar">
										</figure>
										<div class="post-author__info">
											<h4 class="post-author__name">{{author.name}}</h4>
										</div>
									</div>
									<ul class="post__meta meta">
										<li class="meta__item meta__item--views">{{meta.views}}</li>
										<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
										<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
									</ul>
								</footer>
							</div>
						</div>
						{{/each}}
					</div>

				</div>
				<!-- Post Grid / End -->
				<!-- Posts Area #1 / End -->

				<!-- Posts Area #2 -->
				<!-- Posts Grid -->
				<div class="posts posts--tile posts--tile-alt post-grid row">

					{{#each (limit esports.posts.news-6 3)}}
					<div class="post-grid__item {{#if featured }}col-sm-12{{else}}col-sm-6{{/if}}">
						<div class="posts__item posts__item--tile {{#if featured }}posts__item--tile-lg{{/if}} {{#each category}}posts__item--{{class}} {{/each}} card">
							<figure class="posts__thumb">
								<img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt="">
								<div class="posts__inner">
									<div class="posts__cat">
										{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
									</div>
									<h6 class="posts__title posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
									<time datetime="2018-08-23" class="posts__date">{{date}}</time>
								</div>
							</figure>
							<a href="_esports_blog-post-1.html" class="posts__cta"></a>
							<footer class="posts__footer card__footer">
								<div class="post-author">
									<figure class="post-author__avatar">
										<img src="{{../root}}assets/images/esports/samples/{{author.avatar}}" alt="Post Author Avatar">
									</figure>
									<div class="post-author__info">
										<h4 class="post-author__name">{{author.name}}</h4>
									</div>
								</div>
								<ul class="post__meta meta">
									<li class="meta__item meta__item--views">{{meta.views}}</li>
									<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
									<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
								</ul>
							</footer>
						</div>
					</div>
					{{/each}}

				</div>
				<!-- Post Grid / End -->
				<!-- Posts Area #2 / End -->

				<!-- Posts Area #3 -->
				<!-- Latest Videos -->
				<div class="card card--clean">
					<header class="card__header card__header--has-btn">
						<h4>Latest Videos</h4>
						<a href="_esports_team-videos.html" class="btn btn-default btn-xs card-header__button">See All Videos</a>
					</header>
					<div class="card__content">
						<!-- Posts - Videos -->
						<div class="posts posts--card-compact row">

							{{#each esports.posts.videos}}
							<div class="post-grid__item {{#each tag}}post-{{class}} {{/each}} {{#if @first}}col-sm-12{{else}}col-sm-6 col-lg-6{{/if}}">
								<div class="posts__item {{#each category}}posts__item--{{class}} {{/each}} {{#if @first}}posts__item--lg{{/if}} card">
									<figure class="posts__thumb posts__thumb--video">
										<a href="{{video}}" class="mp_iframe"><img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt=""></a>
									</figure>
									<div class="posts__inner card__content">
										<div class="posts__cat">
											{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
										</div>
										<h6 class="posts__title posts__title--color-hover"><a href="_esports_team-video-single.html">{{title}}</a></h6>
										<ul class="post__meta meta">
											<li class="meta__item meta__item--date">{{date}}</li>
											<li class="meta__item meta__item--views">{{meta.views}}</li>
											<li class="meta__item meta__item--likes"><a href="#"><i class="meta-like icon-heart"></i> {{meta.likes}}</a></li>
											<li class="meta__item meta__item--comments"><a href="#">{{meta.comments}}</a></li>
										</ul>
									</div>
								</div>
							</div>
							{{/each}}

						</div>
						<!-- Posts - Videos / End -->
					</div>
				</div>
				<!-- Latest Videos / End -->
				<!-- Posts Area #3 / End -->

			</div>
			<!-- Content / End -->

			<!-- Sidebar -->
			<div id="sidebar" class="sidebar col-lg-4">

				{{> _esports_widget-social }}

				{{> _esports_widget-results-2 }}

				{{> _esports_widget-twitch-streams-sm }}

				{{> _esports_widget-event-result-2 }}

				{{> _esports_widget-tabbed }}

				{{> _esports_widget-event-calendar-2 }}

				{{> _esports_widget-event-preview }}

			</div>
			<!-- Sidebar / End -->
		</div>

	</div>
</div>

<!-- Content / End -->

<!-- Video Player -->
<div class="card {{#unless padding}}card--no-paddings{{/unless}}">
	<header class="card__header card__header--has-btn">
		<h4>{{#if title}}{{title}}{{else}}Game Video Play{{/if}}</h4>
		{{#if btn}}<a href="#" class="btn btn-default btn-xs card-header__button">Go to Channel</a>{{/if}}
	</header>
	<div class="card__content">
		<div class="alc-embeded-player" data-id="{{id}}" data-controls="true" data-provider="{{#if provider}}{{provider}}{{else}}youtube{{/if}}" {{#if thumbnail}}data-thumbnail="{{thumbnail}}"{{/if}} data-easy-embed>
			<div class="alc-embeded-player__overlay">
				<i class="fas fa-play alc-embeded-player__icon"></i>
			</div>
		</div>
	</div>
</div>
<!-- Vide Player / End -->

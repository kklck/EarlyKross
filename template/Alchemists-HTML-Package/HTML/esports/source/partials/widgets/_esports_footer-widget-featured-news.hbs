<!-- Widget: Popular Posts / End -->
<div class="widget widget--footer widget-popular-posts">
	<h4 class="widget__title">Featured News</h4>
	<div class="widget__content">
		<ul class="posts posts--simple-list">

			{{#each esports.posts.widget-featured-footer}}
			<li class="posts__item {{#each category}}posts__item--{{class}} {{/each}}">
				<figure class="posts__thumb posts__thumb--hover">
					<a href="#"><img src="{{../root}}assets/images/esports/samples/{{thumb}}" alt=""></a>
				</figure>
				<div class="posts__inner">
					<div class="posts__cat">
						{{#each category}}<span class="label posts__cat-label posts__cat-label--{{class}}">{{name}}</span>{{/each}}
					</div>
					<h6 class="posts__title posts__title--color-hover"><a href="_esports_blog-post-1.html">{{title}}</a></h6>
					<time datetime="2017-08-21" class="posts__date">{{date}}</time>
				</div>
			</li>
			{{/each}}

		</ul>
	</div>
</div>
<!-- Widget: Popular Posts / End -->

---
layout: football
page-title: Team
page-heading: "Over<span class=\"highlight\">View</span>"

breadcrumbs: [
	{
		label: "Team",
		link: "_football_team-overview.html"
	},
	{
		label: "Overview"
	}
]
---

{{> _football_team-filter}}

<!-- Content
================================================== -->
<div class="site-content">
	<div class="container">

		<div class="row">

			<!-- Content -->
			<div class="content col-lg-8">

				{{> _football_game-scoreboard}}

				<!-- Team Roster: Table -->
				<div class="card card--has-table">
					<div class="card__header card__header--has-btn">
						<h4>Main Roster</h4>
						<a href="_football_team-roster.html" class="btn btn-default btn-xs card-header__button">See Complete Roster</a>
					</div>
					<div class="card__content">
						<div class="table-responsive">
							<table class="table table--lg team-roster-table">
								<thead>
									<tr>
										<th class="team-roster-table__number">NBR</th>
										<th class="team-roster-table__name">Player Name</th>
										<th class="team-roster-table__position">Position</th>
										<th class="team-roster-table__age">Age</th>
										<th class="team-roster-table__height">Height</th>
										<th class="team-roster-table__weight">Weight</th>
										<th class="team-roster-table__status">Status</th>
										<th class="team-roster-table__college">College</th>
									</tr>
								</thead>
								<tbody>

									{{#each football.sp.team.roster-main}}
									<tr>
										<td class="team-roster-table__number">{{number}}</td>
										<td class="team-roster-table__name">{{name}}</td>
										<td class="team-roster-table__position">{{position}}</td>
										<td class="team-roster-table__age">{{age}}</td>
										<td class="team-roster-table__height">{{height}}</td>
										<td class="team-roster-table__weight">{{weight}}</td>
										<td class="team-roster-table__status {{#ifequal status 'Active'}}text-success{{else}}text-danger{{/ifequal}}">{{status}}</td>
										<td class="team-roster-table__college">{{college}}</td>
									</tr>
									{{/each}}

									{{#each football.sp.team.staff}}
									<tr>
										<td class="team-roster-table__number">{{number}}</td>
										<td class="team-roster-table__name">{{name}}</td>
										<td class="team-roster-table__position">{{position}}</td>
										<td class="team-roster-table__age">{{age}}</td>
										<td class="team-roster-table__height">-</td>
										<td class="team-roster-table__weight">-</td>
										<td class="team-roster-table__status">-</td>
										<td class="team-roster-table__college">{{college}}</td>
									</tr>
									{{/each}}

								</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- Team Roster: Table / End -->

				<div class="row">

					<div class="col-md-6">

						{{> _football_widget-team-leaders}}

					</div>
					<div class="col-md-6">

						{{> _football_widget-awards}}

					</div>
				</div>

				<!-- Schedule & Tickets -->
				<div class="card card--has-table">
					<div class="card__header card__header--has-btn">
						<h4>Games Schedule</h4>
						<a href="_football_team-schedule.html" class="btn btn-default btn-xs card-header__button">See Complete Schedule</a>
					</div>
					<div class="card__content">
						<div class="table-responsive">
							<table class="table table-hover team-schedule">
								<thead>
									<tr>
										<th class="team-schedule__date">Date</th>
										<th class="team-schedule__versus">Versus</th>
										<th class="team-schedule__time">Time</th>
										<th class="team-schedule__venue">Venue</th>
										<th class="team-schedule__tickets">Tickets</th>
									</tr>
								</thead>
								<tbody>

									{{#each (limit football.sp.team.schedule 6)}}
									<tr>
										<td class="team-schedule__date">{{date}}</td>
										<td class="team-schedule__versus">
											<div class="team-meta">
												<figure class="team-meta__logo">
													<img src="{{../root}}assets/images/samples/logos/{{team.logo}}" alt="">
												</figure>
												<div class="team-meta__info">
													<h6 class="team-meta__name">{{team.name}}</h6>
													<span class="team-meta__place">{{team.place}}</span>
												</div>
											</div>
										</td>
										<td class="team-schedule__time">{{time}}</td>
										<td class="team-schedule__venue">{{venue}}</td>
										<td class="team-schedule__tickets">
											<a href="#" class="btn btn-xs btn-default-alt btn-block {{#unless availability}}disabled{{/unless}}">
												{{#if availability}}Buy Game Tickets{{else}}Sold Out{{/if}}
											</a>
										</td>
									</tr>
									{{/each}}

								</tbody>
							</table>
						</div>
					</div>
				</div>
				<!-- Schedule & Tickets / End -->

			</div>
			<!-- Content / End -->

			<!-- Sidebar -->
			<div class="sidebar col-lg-4">

				{{> _football_widget-standings}}

				{{> _football_widget-results}}

				{{> _football_widget-team-stats}}

				{{> _football_widget-newslog}}

				<!-- Widget: Progress Bars -->
				<aside class="widget card widget--sidebar">
					<div class="widget__title card__header">
						<h4>Progress Bars</h4>
					</div>
					<div class="widget__content card__content">

						<!-- Progress: Shot Accuracy -->
						<div class="progress-stats progress-stats--top-labels">
							<div class="progress__label text-transform-normal">Aqua Gradient Progress</div>
							<div class="progress">
								<div class="progress__bar progress__bar--aqua-gradient progress__bar-width-60" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
							<div class="progress__number">62%</div>
						</div>
						<!-- Progress: Shot Accuracy / End -->

						<!-- Progress: Shot Accuracy -->
						<div class="progress-stats progress-stats--top-labels">
							<div class="progress__label text-transform-normal">Primary Progress</div>
							<div class="progress">
								<div class="progress__bar progress__bar-width-50" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
							<div class="progress__number">46%</div>
						</div>
						<!-- Progress: Shot Accuracy / End -->

						<!-- Progress: Shot Accuracy -->
						<div class="progress-stats progress-stats--top-labels">
							<div class="progress__label text-transform-normal">Secondary Progress</div>
							<div class="progress">
								<div class="progress__bar progress__bar--secondary progress__bar-width-80" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
							<div class="progress__number">79%</div>
						</div>
						<!-- Progress: Shot Accuracy / End -->

						<!-- Progress: Shot Accuracy -->
						<div class="progress-stats progress-stats--top-labels">
							<div class="progress__label text-transform-normal">Info Progress</div>
							<div class="progress">
								<div class="progress__bar progress__bar--info progress__bar-width-30" role="progressbar" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
							<div class="progress__number">35%</div>
						</div>
						<!-- Progress: Shot Accuracy / End -->

					</div>
				</aside>
				<!-- Widget: Progress Bars / End -->


			</div>
			<!-- Sidebar / End -->
		</div>

		<!-- Points History -->
		<div class="card">
			<div class="card__header card__header--has-legend">
				<h4>Yearly Points History</h4>
				<div id="gamesPoinstsLegendFootball" class="chart-legend"></div>
			</div>
			<div class="card__content">
				<canvas id="points-history-football" class="points-history-chart" height="95"></canvas>
			</div>
		</div>
		<!-- Points History / End -->

	</div>
</div>

<!-- Content / End -->

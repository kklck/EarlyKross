<!-- Widget: Awards -->
<aside class="widget card widget--sidebar widget-awards">
	<div class="widget__title card__header">
		<h4>Our Awards</h4>
	</div>
	<div class="widget__content card__content pt-0">
		<ul class="awards-filter">
			<li class="awards-filter__item"><a href="#" class="awards-filter__link awards-filter__link--reset awards-filter__link--active">All</a></li>
			<li class="awards-filter__item"><a href="#" class="awards-filter__link" data-category="award--2016">2016</a></li>
			<li class="awards-filter__item"><a href="#" class="awards-filter__link" data-category="award--2015">2015</a></li>
			<li class="awards-filter__item"><a href="#" class="awards-filter__link" data-category="award--2014">2014</a></li>
			<li class="awards-filter__item"><a href="#" class="awards-filter__link" data-category="award--2013">2013</a></li>
		</ul>
		<div class="awards awards--slider">

			{{#each football.sp.team.widget-awards}}
			<div class="awards__item award--{{year}}">
				<figure class="awards__figure awards__figure--space">
					<img src="{{../root}}assets/images/football/{{img}}" alt="">
				</figure>
				<div class="awards__desc">
					<h5 class="awards__name">{{title}}</h5>
					<div class="awards__date">{{date}}</div>
					<div class="awards__stars">
						{{#repeat 5}}
						<i class="fas fa-star"></i>
						{{/repeat}}
					</div>
				</div>
			</div>
			{{/each}}

		</div>
	</div>
</aside>
<!-- Widget: Awards / End -->

<!-- Footer
================================================== -->
<footer id="footer" class="footer">

	<!-- Footer Info -->
	<div class="footer-info">
		<div class="container">

			<div class="footer-info__inner">
				<!-- Footer Logo -->
				<div class="footer-logo footer-logo--has-txt">
					<a href="_football_index.html">
						<img src="{{../root}}assets/images/football/logo-footer.png" srcset="{{../root}}assets/images/football/logo-footer@2x.png 2x" alt="{{global.site-name}}" class="footer-logo__img">
						<div class="footer-logo__heading">
							<h5 class="footer-logo__txt">{{global.site-name}}</h5>
							<span class="footer-logo__tagline">{{global.site-tagline}}</span>
						</div>
					</a>
				</div>
				<!-- Footer Logo / End -->

				<!-- Info Block -->
				<div class="info-block info-block--horizontal">
					<div class="info-block__item info-block__item--helmet">
						<svg role="img" class="df-icon df-icon--football-helmet">
							<use xlink:href="{{../root}}assets/images/football/icons-football.svg#football-helmet"/>
						</svg>
						<h6 class="info-block__heading">Join Our Team!</h6>
						<a class="info-block__link" href="mailto:{{football.contact-info.email-1}}">{{football.contact-info.email-1}}</a>
					</div>
					<div class="info-block__item">
						<svg role="img" class="df-icon df-icon--football-ball">
							<use xlink:href="{{../root}}assets/images/football/icons-football.svg#football-ball"/>
						</svg>
						<h6 class="info-block__heading">Contact Us</h6>
						<a class="info-block__link" href="mailto:{{football.contact-info.email-2}}">{{football.contact-info.email-2}}</a>
					</div>
					<div class="info-block__item info-block__item--social">
						<ul class="social-links social-links--circle">
							{{#each football.contact-info.social}}
							<li class="social-links__item">
								<a href="{{link}}" class="social-links__link"><i class="{{icon}}"></i></a>
							</li>
							{{/each}}
						</ul>
					</div>
				</div>
				<!-- Info Block / End -->

			</div>
		</div>
	</div>
	<!-- Footer Info / End -->

	<!-- Footer Widgets -->
	<div class="footer-widgets">
		<div class="footer-widgets__inner">
			<div class="container">
				<div class="row">
					<div class="col-sm-6 col-lg-3">
						<div class="footer-col-inner">

							<!-- Widget: Popular Posts / End -->
							<div class="widget widget--footer widget-popular-posts">
								<h4 class="widget__title">Popular News</h4>
								<div class="widget__content">
									<ul class="posts posts--simple-list posts--simple-list-numbered">

										{{#each football.posts.widget-popular-footer}}
										<li class="posts__item posts__item--{{category.class}}">
											<div class="posts__inner">
												<div class="posts__cat">
													<span class="label posts__cat-label">{{category.name}}</span>
												</div>
												<h6 class="posts__title posts__title--color-hover"><a href="#">{{title}}</a></h6>
												<time datetime="2018-09-22" class="posts__date">{{date}}</time>
											</div>
										</li>
										{{/each}}

									</ul>
								</div>
							</div>
							<!-- Widget: Popular Posts / End -->

						</div>
					</div>
					<div class="col-sm-6 col-lg-3">
						<div class="footer-col-inner">

							<!-- Widget: Most Commented / End -->
							<div class="widget widget--footer widget-popular-posts">
								<h4 class="widget__title">Most Commented</h4>
								<div class="widget__content">
									<ul class="posts posts--simple-list">

										{{#each football.posts.widget-commented-footer}}
										<li class="posts__item posts__item--{{category.class}}">
											<figure class="posts__thumb posts__thumb--hover">
												<a href="#"><img src="{{../root}}assets/images/{{thumb}}" alt=""></a>
											</figure>
											<div class="posts__inner">
												<div class="posts__cat">
													<span class="label posts__cat-label">{{category.name}}</span>
												</div>
												<h6 class="posts__title posts__title--color-hover"><a href="#">{{title}}</a></h6>
											</div>
											<span class="posts__comments"><i class="icon-bubble"></i> {{meta.comments}}</span> <time datetime="2017-09-22" class="posts__date">{{date}}</time>
										</li>
										{{/each}}

									</ul>
								</div>
							</div>
							<!-- Widget: Most Commented / End -->

						</div>
					</div>
					<div class="clearfix visible-sm"></div>
					<div class="col-sm-6 col-lg-3">
						<div class="footer-col-inner">

							{{> _football_footer-widget-twitter}}

							{{> _football_footer-widget-tagcloud}}

						</div>
					</div>
					<div class="col-sm-6 col-lg-3">
						<div class="footer-col-inner">

							{{> _football_footer-widget-contact}}

						</div>
					</div>
				</div>
			</div>
		</div>

	</div>
	<!-- Footer Widgets / End -->

	<!-- Footer Secondary -->
	<div class="footer-secondary">
		<div class="container">
			<div class="footer-secondary__inner">
				<div class="row">
					<div class="col-md-4">
						<div class="footer-copyright">{{{football.copyright}}}</div>
					</div>
					<div class="col-md-8">
						<ul class="footer-nav footer-nav--right footer-nav--sm">
							{{#each football.nav-footer}}
							<li class="footer-nav__item"><a href="{{link}}">{{label}}</a></li>
							{{/each}}
						</ul>
					</div>
				</div>
			</div>
		</div>
	</div>
	<!-- Footer Secondary / End -->
</footer>
<!-- Footer / End -->
